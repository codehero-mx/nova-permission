{
    "name": "codehero-mx/nova-permission-tool",
    "description": "A Laravel Nova tool for Spatie's Permission library.",
    "keywords": [
        "laravel",
        "nova",
        "spatie-permission"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "laravel/nova": "^4.0",
        "spatie/laravel-permission": "^4.0|^5.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CodeHeroMX\\NovaPermission\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        },
        "laravel": {
            "providers": [
                "CodeHeroMX\\NovaPermission\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
